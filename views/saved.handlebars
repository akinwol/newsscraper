<div class="jumbotron mainPage" style="text-align: center;">
    <h1 class="display-3">Saved Articles</h1>
    {{!-- <p class="lead">Welcome to ...</p> --}}
    <hr class="my-2">
    <p class="lead">Your Saved Articles</p>

</div>


<div class="container">
    <div class="row">

        <div class="col-12">
            {{#each article}}
            {{#if saved}}
            <div class="card product ">
                <div class="card-header">

                </div>

                <div class="card-body">
                    <div class="row">
                        <div class="col-8">
                            <a href="{{this.link}}" target="_blank"> <strong>{{this.title}}</strong></a>
                        </div>
                        <div class="col-4">

                            <button type="button" class="btn btn-primary fav-delete-button" data-id="{{this.id}}">Remove
                            </button>
                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-primary article-note-button" data-id="{{this.id}}"
                                data-title="{{this.title}}" data-toggle="modal" data-target="#exampleModal">
                                Article Note</button><br>

                            <!-- Modal -->
                            <div class="modal" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                                aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <div class="modal-title" id="exampleModalLabel"> </div>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">Ã—</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <div id="saved-notes"> </div>
                                            <div id="enter-notes">
                                                <textarea name="" id="note-description" cols="30" rows="3" placeholder="enter notes here"
                                                    class="form-control"></textarea>
                                            </div>


                                        </div>
                                        <div class="modal-footer">
                                            {{!-- <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button> --}}
                                            <button type="button" class="btn btn-primary save-note" >Save
                                                note</button>
                                        </div>
                                    </div>
                                </div>
                            </div>




                        </div>

                    </div>


                </div>

            </div>
            {{/if}}

            {{/each}}
        </div>


    </div>
</div>


